<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/providerFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="ca.dal.bartertrader.SplashFragment"
        android:label="fragment_blank"
        tools:layout="@layout/fragment_splash" />

    <fragment
        android:id="@+id/providerFragment"
        android:name="ca.dal.bartertrader.ProviderFragment"
        android:label="fragment_provider"
        tools:layout="@layout/fragment_provider" >
        <action
            android:id="@+id/action_providerFragment_to_receiverFragment"
            app:destination="@id/receiverFragment" />
    </fragment>

    <fragment
        android:id="@+id/receiverFragment"
        android:name="ca.dal.bartertrader.ReceiverFragment"
        android:label="fragment_receiver"
        tools:layout="@layout/fragment_receiver" >
        <action
            android:id="@+id/action_receiverFragment_to_providerFragment"
            app:destination="@id/providerFragment" />
    </fragment>

</navigation>